{
	"eslint.validate": ["javascript", "typescript"],
	"[javascript]": {
		"editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
		"editor.tabSize": 2,
		"editor.codeActionsOnSave": {
			"source.fixAll": "always"
		}
	},
	"[typescript]": {
		"editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
		"editor.tabSize": 2,
		"editor.codeActionsOnSave": {
			"source.fixAll": "always"
		}
	},
	"prettier.configPath": ".prettierrc",
	"cSpell.autoFormatConfigFile": true
}
